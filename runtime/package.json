{
    "name": "runtime",
    "private": true,
    "scripts": {
        "prepare": "pip install pdm==2.1.2 && pdm install",
        "lint": "concurrently npm:lint-flake8 npm:lint-pyright",
        "lint-flake8": "pdm run python -m flake8",
        "lint-pyright": "pdm run pyright -p .",
        "format": "pdm run python -m isort -rc . && pdm run python -m black -t py38 .",
        "test": "pdm run python -m pytest -s --cov-report html --cov=anyforce",
        "publish": "pdm build && pdm run python -m twine upload dist/* -u __token__ -p $PYPI_API_TOKEN",
        "update": "pdm update",
        "lint-staged": "lint-staged"
    },
    "lint-staged": {
        "**/*.py": [
            "pdm run python -m flake8",
            "pdm run pyright -p ."
        ]
    },
    "devDependencies": {
        "pyright": "1.1.184"
    }
}
